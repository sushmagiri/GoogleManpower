<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context="com.example.user.googlemanpower.activity.ContactUs">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Map"
    android:gravity="center"
    android:textSize="22sp"
    android:textStyle="bold"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/map"
        android:id="@+id/imageView"

         />

    <TextView

        android:drawableLeft="@drawable/m"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalimatidole, Kathmandu"
        android:textSize="18sp"
        android:textColor="#000"
        android:id="@+id/add_value"
        android:drawablePadding="10dp"
        android:layout_below="@+id/imageView"

         />

        />
    <TextView
        android:drawableLeft="@drawable/fax"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8974 NewTownPlaning Airport-9"
        android:textSize="18sp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/pop_value"
        android:textColor="#000"
        android:layout_below="@+id/add_value"
         />


        />
    <TextView
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/phone"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+977-01-4487063"
        android:textSize="18sp"
        android:textColor="#000"
        android:id="@+id/contact_value"
        android:layout_below="@+id/pop_value"
         />

    <TextView
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/fax"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+977-01-4465296"
        android:textSize="18sp"
        android:drawablePadding="10dp"
        android:textColor="#000"
        android:id="@+id/fax_value"
        android:layout_below="@+id/contact_value"
        />


    />
    <TextView
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/email"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info@googleoverseas.com"
        android:textSize="18sp"
        android:drawablePadding="10dp"
        android:textColor="#000"
        android:id="@+id/email_value"
        android:layout_below="@+id/fax_value"
         />

        />
    <TextView
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/globe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.googleoverseas.com"
        android:textSize="18sp"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/website_value"
        android:layout_below="@+id/email_value"
        android:textColor="#000"
         />




</RelativeLayout>
</ScrollView>